<Window x:Class="StoreApp.Views.InsertItemPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StoreApp.Views"
        mc:Ignorable="d"
        Title="Insert Item" Height="150" Width="200">

    <Border Padding="3">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Row="0"
                        VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Margin="0 0 5 0">Title:</TextBlock>
                <TextBox Width="150"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Row="1" 
                        VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Margin="0 0 5 0">Price:</TextBlock>
                <TextBox Width="150"/>
            </StackPanel>

            <Button Grid.Row="2" Margin="5 8">Add Item</Button>
            
        </Grid>
    </Border>
    
</Window>
